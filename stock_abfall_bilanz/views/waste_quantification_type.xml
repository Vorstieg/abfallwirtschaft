<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action Window for Waste Quantification Type -->
        <!-- This action defines what happens when you click on the menu item.
             It links to the 'waste.quantification.type' model and specifies
             which views (tree and form) are available. -->
        <record id="action_waste_quantification_type" model="ir.actions.act_window">
            <field name="name">Waste Quantification Types</field>
            <field name="res_model">waste.quantification.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Waste Quantification Type
                </p><p>
                    Manage different types of waste quantification methods, such as GTINs, names, and descriptions.
                </p>
            </field>
        </record>

        <record id="view_waste_quantification_type_tree" model="ir.ui.view">
            <field name="name">waste.quantification.type.tree</field>
            <field name="model">waste.quantification.type</field>
            <field name="arch" type="xml">
                <list string="Waste Quantification Types">
                    <field name="gtin"/>
                    <field name="name"/>
                    <field name="code"/> <!-- 'code' is used as 'Description' in your model -->
                </list>
            </field>
        </record>

        <!-- Form View for Waste Quantification Type -->
        <!-- This defines the detailed view for a single record, allowing
             users to create or edit a Waste Quantification Type. -->
        <record id="view_waste_quantification_type_form" model="ir.ui.view">
            <field name="name">waste.quantification.type.form</field>
            <field name="model">waste.quantification.type</field>
            <field name="arch" type="xml">
                <form string="Waste Quantification Type">
                    <sheet>
                        <group>
                            <field name="gtin"/>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem
            id="menu_waste_quantification_type"
            name="Waste Quantification Types"
            parent="menu_waste_balance_core_data"
            action="action_waste_quantification_type"
            sequence="20"/>

    </data>
</odoo>
