<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for waste.move -->
        <!-- This view defines the layout for a single record, with fields grouped for clarity. -->
        <record id="waste_move_view_form" model="ir.ui.view">
            <field name="name">waste.move.form</field>
            <field name="model">waste.move</field>
            <field name="arch" type="xml">
                <form string="Waste Move">
                    <header>
                        <button string="Bilanz Exportieren" name="action_show_dialog" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="move_id" string="Receipt Sequence" class="oe_edit_only"/>
                            <h1>
                                <field name="move_id"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!-- Grouping fields for the origin of the waste. -->
                                <field name="origin_partner"/>
                                <field name="origin_installation"/>
                            </group>
                            <group>
                                <!-- Grouping fields for the destination of the waste. -->
                                <field name="recipient_partner"/>
                                <field name="recipient_installation"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <!-- Grouping product and amount details. -->
                                <field name="product"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <!-- Other key details like transport type and date. -->
                                <field name="transport_type"/>
                                <field name="date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- list View for waste.move -->
        <!-- This view defines the columns for the list view, showing key information at a glance. -->
        <record id="waste_move_view_list" model="ir.ui.view">
            <field name="name">waste.move.list</field>
            <field name="model">waste.move</field>
            <field name="arch" type="xml">
                <list string="Waste Moves">
                    <field name="move_id"/>
                    <field name="date"/>
                    <field name="origin_partner"/>
                    <field name="recipient_partner"/>
                    <field name="product"/>
                    <field name="amount"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="waste_move_action" model="ir.actions.act_window">
            <field name="name">Waste Moves</field>
            <field name="res_model">waste.move</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new waste move record
                </p>
            </field>
        </record>

        <record id="view_bilanz_xml" model="ir.ui.view">
            <field name="name">Billanz XML Report</field>
            <field name="model">waste.bilanz</field>
            <field name="arch" type="xml">
                <form string="Select Year">
                    <group>
                        <field name="year"/>
                    </group>
                    <footer>
                        <button string="Select" name="action_download_bilanz" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="waste_move_menu_moves"
                  name="Waste Moves"
                  parent="menu_waste_balance_core_data"
                  action="waste_move_action"
                  sequence="60"
        />
    </data>
</odoo>