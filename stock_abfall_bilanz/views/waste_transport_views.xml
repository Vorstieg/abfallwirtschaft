<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View (List View) -->
        <record id="view_waste_transport_tree" model="ir.ui.view">
            <field name="name">waste.transport.type.list</field>
            <field name="model">waste.transport.type</field>
            <field name="arch" type="xml">
                <list string="Waste Types">
                    <field name="gtin"/>
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_waste_type_form" model="ir.ui.view">
            <field name="name">waste.transport.type.form</field>
            <field name="model">waste.transport.type</field>
            <field name="arch" type="xml">
                <form string="Waste Transport Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Normale Ãœbernahme von Abfall."/>
                            </h1>
                        </div>
                        <group>
                            <field name="gtin"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_waste_transport_type_search" model="ir.ui.view">
            <field name="name">waste.transport.type.search</field>
            <field name="model">waste.transport.type</field>
            <field name="arch" type="xml">
                <search string="Search Waste Type">
                    <field name="name" string="Waste Transport Type"/>
                    <field name="description" string="Description"/>
                </search>
            </field>
        </record>

        <!-- Action to open the views -->
        <record id="action_waste_transport_type" model="ir.actions.act_window">
            <field name="name">Waste Transport Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">waste.transport.type</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_waste_transport_type_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new waste transport type.
                </p>
            </field>
        </record>

        <menuitem
                id="menu_waste_balance_core_data"
                name="Stammdaten"
                parent="product_waste_registry.menu_product_waste_registry_root"
                sequence="20"/>
        <menuitem
                id="menu_waste_type"
                name="Waste Transport Types"
                parent="menu_waste_balance_core_data"
                action="action_waste_transport_type"
                sequence="10"/>
    </data>
</odoo>