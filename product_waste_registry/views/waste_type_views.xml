<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View (List View) -->
        <record id="view_waste_type_tree" model="ir.ui.view">
            <field name="name">waste.type.list</field>
            <field name="model">waste.type</field>
            <field name="arch" type="xml">
                <list string="Waste Types">
                    <field name="name"/>
                    <field name="gtin"/>
                    <field name="specification"/>
                    <field name="specification_enumeration"/>
                    <field name="dangerous"/>
                    <field name="key_number"/>
                    <field name="note"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_waste_type_form" model="ir.ui.view">
            <field name="name">waste.type.form</field>
            <field name="model">waste.type</field>
            <field name="arch" type="xml">
                <form string="Waste Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Spelze, Spelzen- und Getreidestaub"/>
                            </h1>
                        </div>
                        <group>
                            <field name="gtin"/>
                            <field name="specification"/>
                            <field name="specification_enumeration"/>
                            <field name="dangerous"/>
                            <field name="key_number"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_waste_type_search" model="ir.ui.view">
            <field name="name">waste.type.search</field>
            <field name="model">waste.type</field>
            <field name="arch" type="xml">
                <search string="Search Waste Type">
                    <field name="name" string="Waste Type"/>
                    <field name="specification" string="Specification"/>
                </search>
            </field>
        </record>


        <!-- Action to open the views -->
        <record id="action_waste_type" model="ir.actions.act_window">
            <field name="name">Waste Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">waste.type</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_waste_type_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new waste type.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem
                id="menu_product_waste_registry_root"
                name="Waste Registry"
                sequence="20"/>

        <menuitem
                id="menu_waste_type"
                name="Waste Types"
                parent="menu_product_waste_registry_root"
                action="action_waste_type"
                sequence="10"/>
    </data>
</odoo>