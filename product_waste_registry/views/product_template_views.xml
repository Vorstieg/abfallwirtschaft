<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_waste_type" model="ir.ui.view">
        <field name="name">product.template.form.waste.type</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Find the product category field and add our new field after it -->
            <field name="categ_id" position="after">
                <field name="waste_type_id"/>
            </field>
        </field>
    </record>
</odoo>