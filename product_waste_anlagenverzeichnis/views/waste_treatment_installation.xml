<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WasteTreatmentSite Views -->
    <record id="waste_treatment_site_view_form" model="ir.ui.view">
        <field name="name">waste.treatment.site.form</field>
        <field name="model">waste.treatment.site</field>
        <field name="arch" type="xml">
            <form string="Waste Treatment Site">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gtin"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="waste_treatment_site_view_list" model="ir.ui.view">
        <field name="name">waste.treatment.site.list</field>
        <field name="model">waste.treatment.site</field>
        <field name="arch" type="xml">
            <list string="Waste Treatment Sites">
                <field name="name"/>
                <field name="gtin"/>
            </list>
        </field>
    </record>

    <record id="waste_treatment_site_view_search" model="ir.ui.view">
        <field name="name">waste.treatment.site.search</field>
        <field name="model">waste.treatment.site</field>
        <field name="arch" type="xml">
            <search string="Search Waste Treatment Site">
                <field name="name" string="Site Name"/>
                <field name="gtin"/>
            </search>
        </field>
    </record>

    <!-- Actions for WasteTreatmentSite -->
    <record id="waste_treatment_site_action" model="ir.actions.act_window">
        <field name="name">Waste Treatment Sites</field>
        <field name="res_model">waste.treatment.site</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Waste Treatment Site
            </p>
        </field>
    </record>

    <!-- WasteTreatmentInstallation Views -->
    <record id="waste_treatment_installation_view_form" model="ir.ui.view">
        <field name="name">waste.treatment.installation.form</field>
        <field name="model">waste.treatment.installation</field>
        <field name="arch" type="xml">
            <form string="Waste Treatment Installation">
                <sheet>
                    <group>
                        <field name="installation_name"/>
                        <field name="gtin"/>
                        <field name="location"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="waste_treatment_installation_view_list" model="ir.ui.view">
        <field name="name">waste.treatment.installation.list</field>
        <field name="model">waste.treatment.installation</field>
        <field name="arch" type="xml">
            <list string="Waste Treatment Installations">
                <field name="installation_name"/>
                <field name="gtin"/>
                <field name="location"/>
            </list>
        </field>
    </record>

    <record id="waste_treatment_installation_view_search" model="ir.ui.view">
        <field name="name">waste.treatment.installation.search</field>
        <field name="model">waste.treatment.installation</field>
        <field name="arch" type="xml">
            <search string="Search Waste Treatment Installation">
                <field name="installation_name" string="Installation Name"/>
                <field name="gtin"/>
                <field name="location"/>
            </search>
        </field>
    </record>

    <!-- Actions for WasteTreatmentInstallation -->
    <record id="waste_treatment_installation_action" model="ir.actions.act_window">
        <field name="name">Waste Treatment Installations</field>
        <field name="res_model">waste.treatment.installation</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Waste Treatment Installation
            </p>
        </field>
    </record>

    <menuitem
            id="waste_treatment_installation_menu"
            name="Waste Treatment Installations"
            parent="product_waste_registry.menu_product_waste_registry_root"
            action="waste_treatment_installation_action"
            sequence="50"/>

        <menuitem id="waste_treatment_site_menu"
              name="Waste Treatment Sites"
              parent="product_waste_registry.menu_product_waste_registry_root"
              action="waste_treatment_site_action"
              sequence="40"/>
</odoo>